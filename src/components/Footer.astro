---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { label: 'Candidature', href: '/candidature', isModal: false },
  { label: 'Bilan', href: '/bilan', isModal: false },
  { label: 'Programme', href: '#', isModal: true },
  { label: 'Notre Équipe', href: '/', isModal: false },
  { label: 'Mentions légales', href: '/mentions-legales', isModal: false },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Logo -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/images/logo.png" alt="NANDY Vitalité" class="footer-logo-img" width="140" height="44" />
        </a>
        <p class="footer-tagline">Ensemble, écrivons le prochain chapitre de notre histoire commune.</p>
      </div>

      <!-- Navigation -->
      <nav class="footer-nav" aria-label="Navigation du pied de page">
        <ul class="footer-nav-list">
          {footerLinks.map(link => (
            <li>
              {link.isModal ? (
                <a href={link.href} data-modal-trigger class="footer-link">
                  {link.label}
                </a>
              ) : (
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              )}
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {currentYear} Nandy Vitalité - Tous droits réservés
      </p>
      <p class="footer-legal">
        Site de campagne électorale
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    color: white;
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
    margin-top: auto;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
    padding-bottom: var(--spacing-2xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Brand */
  .footer-brand {
    text-align: center;
  }

  .footer-logo {
    display: inline-block;
    text-decoration: none;
    margin-bottom: var(--spacing-md);
  }

  .footer-logo-img {
    height: 50px;
    width: auto;
    background-color: white;
    padding: 8px 12px;
    border-radius: 8px;
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-style: italic;
    max-width: 300px;
    margin: 0 auto;
  }

  /* Navigation */
  .footer-nav {
    text-align: center;
  }

  .footer-nav-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm) var(--spacing-lg);
    list-style: none;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-accent);
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    padding-top: var(--spacing-xl);
    text-align: center;
  }

  .footer-copyright {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.85rem;
    margin: 0;
  }

  .footer-legal {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.8rem;
    margin: 0;
  }

  /* Medium screens and up */
  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }

    .footer-brand {
      text-align: left;
    }

    .footer-tagline {
      margin: 0;
    }

    .footer-nav {
      text-align: right;
    }

    .footer-nav-list {
      justify-content: flex-end;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
