  </section>
</Layout>

<style>
  .bilan-section {
    background-color: var(--color-bg-alt);
    min-height: 100vh;
  }

  .bilan-container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .bilan-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .bilan-container {
      padding: var(--spacing-xl) var(--spacing-lg);
      gap: var(--spacing-md);
    }

    .bilan-image {
      border-radius: 8px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }
  }
</style>
